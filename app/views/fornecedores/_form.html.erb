<%= form_with(model: fornecedor) do |form| %>
  <% if fornecedor.errors.any? %>
    <div style="color: red">
      <h2>Ha <%= fornecedor.errors.count %> erro(s):</h2>

      <ul>
        <% fornecedor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-6">
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome, class:"form-control" %>
  </div>

  <div class="col-sm-6">
    <%= form.label :cnpj, style: "display: block" %>
    <%= form.text_field :cnpj, class:"form-control" %>
  </div>

  <div class="col-sm-12">
    <%= form.label :endereco, style: "display: block" %>
    <%= form.textarea :endereco, class:"form-control" %>
  </div>
<br>
  <div class="col-sm-6">
    <%= form.submit "Salvar", class: "btn btn-success" %>
  </div>
<% end %>
